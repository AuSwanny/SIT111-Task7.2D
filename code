// File name: projects/04/Fill.asm

// Put your code here.

(INITIALISE)
@SCREEN
D=A
@0
M=D
//Sets start location for screen to RAM0

(KEYBOARDCHECK)
@KBD
D=M
@FILL
D;JGT
//JUMP IF A KEYBOARD KEY IS DETECTED
@CLEAR
D;JEQ
//OTHERWISE JUMP TO CLEAR
@KEYBOARDCHECK
0;JMP

(FILL)
@1
M=-1
//THIS IS WHAT TO FILL THE SCREEN WITH
// NEGATIVE ONE EQUALS A STRING OF ONES IN BINARY
// THIS WILL FILL THE SCREEN
@SWAP
0;JMP

(CLEAR)
@1
M=0
//THIS SI WHAT TO FILL THE SCREEN WITH
@SWAP
0;JMP

(SWAP)
@1
//CHECKS THE SETTING OF WHAT TO SET SCREEN TO, CLEAR OR FILL
D=M
//THIS WILL BE CLEAR OR FILL (0 OR 1)
@0
A=M
//CHECKS ADDRESS OF PIXEL IN SCREEN TO SET
M=D
//PERFORMS THE CHANGE
@0
D=M+1
//INCREMENT TO NEXT PIXEL
@KBD
D=A-D
//KEYBOARD-SCREEN = A
@0
M=M+1
//INCREMENT TO NEXT PIXEL
A=M

@SWAP
D;JGT
//IF A=0, THE ENTIRE SCREEN IS SET TO FILL

@INITIALISE
0;JMP
